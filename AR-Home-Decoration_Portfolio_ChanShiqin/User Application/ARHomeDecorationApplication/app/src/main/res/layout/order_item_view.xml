<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productsBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@drawable/order_history_box_radius"
    android:paddingTop="8dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingBottom="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/productOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Delivered"
            android:textColor="#FF0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/viewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="View Details >>"
            android:textSize="12sp"
            android:textColor="#747474" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/productDetailsBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Product image -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="InScent Fragrance 10ml Eacu de"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1" />

<!--            <TextView-->
<!--                android:id="@+id/productNameText"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="left"-->
<!--                android:text="InScent Fragrance 10ml Eacu de"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="13sp"-->
<!--                android:ellipsize="end"-->
<!--                android:maxLines="1" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productDesign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Addict 2"
                    android:textColor="#747474"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/productQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="x1"
                    android:textColor="#747474"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:text="RM 27.55"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/totalProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Total 2 items: RM 49.00"
            android:textSize="13sp"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>
